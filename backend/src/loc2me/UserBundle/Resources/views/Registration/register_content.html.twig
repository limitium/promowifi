{% trans_default_domain 'FOSUserBundle' %}
<h4>Registration</h4>
<div class="row">
    <a class="right waves-effect waves-teal btn-flat" href="{{ path("fos_user_security_login") }}">
        <i class="mdi-action-assignment-ind left"></i>
        {{ 'security.login.submit'|trans }}</a>
</div>

{% if form.vars.errors|length >0 %}
    <p class="flow-text red-text">{{ form_errors(form) }}</p>
{% endif %}

<div class="row">
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST">
        {{ form_widget(form._token) }}

        <div class="input-field">
            <i class="mdi-action-account-circle prefix"></i>
            {{ form_widget(form.username) }}
            {{ form_label(form.username) }}
            {% if form.username.vars.errors|length >0 %}
                <span class="flow-text red-text">{{ form_errors(form.username) }}</span>
            {% endif %}
        </div>

        <div class="input-field">
            <i class="mdi-communication-email prefix"></i>
            {{ form_widget(form.email) }}
            {{ form_label(form.email) }}
            {% if form.email.vars.errors|length >0 %}
                <span class="flow-text red-text">{{ form_errors(form.email) }}</span>
            {% endif %}
        </div>

        <div class="input-field">
            <i class="mdi-action-verified-user prefix"></i>
            {{ form_widget(form.plainPassword) }}
            {{ form_label(form.plainPassword) }}
            {% if form.plainPassword.vars.errors|length >0 %}
                <span class="flow-text red-text">{{ form_errors(form.plainPassword) }}</span>
            {% endif %}
        </div>

        <div class="row">
            <button class="right waves-effect waves-light btn-large">
                <i class="mdi-action-done left"></i>
                {{ 'registration.submit'|trans }}</button>
        </div>
    </form>
</div>
